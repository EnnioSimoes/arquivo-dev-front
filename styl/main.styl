$cinza = #36424a;

.border
    border: 1px solid #000
.block-center
    margin: 0 auto;
    display: block;
.icon
    display: block;
    text-indent: -9999px;
.icon-search
    width: 32px;
    height: 32px;
    background: url(./../images/icons/icon-search.svg);
    background-size: 32px 32px;
header
    width: 100%;
    background-color: $cinza;
    nav
        ul.nav-principal
            display: block;
            padding: 0;
            margin: 0;
            li
                display: inline-block;
                list-style: none;
                margin: 0;
                padding: 0;
                a
                    color: #fff
                    font-weight: bold;
                    font-size: 16px;
                    text-decoration: none;
                    padding: 55px 7px;
                    display: block;
                    margin: 0;
                    transition: all ease 0.5s
                    &:hover
                        background-color: $cinza + 10%;
    form.buscar
        float: right;
        padding: 46px 0;
        position: relative;
        input[type="text"]
            display: block;
            float: left;
            height: 40px;
            border-radius: 3px 0 0 3px;
            width: 0px;
            right: -30px;
            transition: all ease 0.5s
            position: relative;
            &:hover, &:focus
                width: 190px;
                margin-right: 0;
                right: -2px;

        button.search
            width: 40px;
            height: 40px;
            background: url(./../images/icons/icon-search.svg) no-repeat;
            background-color: $cinza + 20%;
            background-size: 35px 35px;
            background-position: center;
            border: none;
            border-radius: 3px;
            position: relative;
            z-index: 10;
            &:hover ~ #text_busca
                width: 200px;
                margin-right: 0;
                right: -2px;
                
