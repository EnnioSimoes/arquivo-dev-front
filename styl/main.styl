//####### HELPERS ########
.border
    border: 1px solid #000
.block-center
    margin: 0 auto;
    display: block;

//####### TIPOGRAPHY ########
p, a, span, h1, h2, h3, h4, h5
    font-family: 'Ubuntu', sans-serif;
    color: #333;

$cinza_escuro = #36424a;
$cinza_claro = #EEEEEE;
$azul = #0483B5;
$laranja = #E84C1C;
$verde = #05C290;

$blur = 5px;
$bk-javascript = #F0DA50;
$bk-php = #8095D4;
$bk-laravel = #EE5F5B;

//####### STRUCTURE ########
body
    background: $cinza_claro
.icon
    display: block;
    text-indent: -9999px;
    float: left;
.icon-search
    width: 32px;
    height: 32px;
    background: url(./../images/icons/icon-search.svg) no-repeat;
    background-size: 32px 32px;
.icon-code
    width: 25px;
    height: 25px;
    background: url(./../images/icons/icon-code.svg) no-repeat;
    background-position: center;
    background-size: 17px;
#postContent
    padding-top: 20px;
    article.post-card
        overflow: hidden;
        background: #fff;
        height: 450px;
        width: 100%;
        float: left;
        margin-top: 30px;
        box-shadow: 1px 1px 3px #ccc;
        .post-header
            position: relative;
            .bk-header
                margin-top: 0;
                display: block;
                background: url(http://blogdoscursos.com.br/wp-content/uploads/2015/11/Bootstrap-3.jpg) no-repeat center 0;
                background-size: cover;
                overflow: hidden;
                position: relative;
                width: 100%;
                height: 200px;
                -webkit-filter: blur($blur);
                -moz-filter: blur($blur);
                -o-filter: blur($blur);
                -ms-filter: blur($blur);
                filter: blur($blur);
                transition: all ease 1s;
                &:hover
                    -webkit-filter: blur(0);
                    -moz-filter: blur(0);
                    -o-filter: blur(0);
                    -ms-filter: blur(0);
                    filter: blur(0);
            h3
                bottom: 10px;
                margin-left: 10px;
                display: block;
                width: 75%;
                background: rgba(0,0,0,0.5);
                position: absolute;
                color: #fff;
                font-family: Verdana, Arial;
                font-size: 20px;
                padding: 7px;
                line-height: 33px;
                font-weight: bold;
                z-index: 3;
                &:hover ~ .bk-header
                    -webkit-filter: blur(0);
                    -moz-filter: blur(0);
                    -o-filter: blur(0);
                    -ms-filter: blur(0);
                    filter: blur(0);
        .post-content
            p
                color: #4b4b4b;
                padding: 0 30px 30px 30px;
                font-size: 13px;
                margin: 0;
            .post-footer
                width: 100%;
                height: 55px;
                .tag-count
                    position: relative;
                    display: block;
                    border: 1px solid $cinza_claro;
                    width: 35px;
                    height: 25px;
                    border-radius: 20px;
                    padding: 3px;
                    box-shadow: 1px 1px 1px #ccc;
                    span
                        color: $cinza_escuro;
                        float: right;
                        font-size: 12px;
                .read-more
                    background: $laranja;
                    float: right;
                    color: #fff;
                    padding: 5px;
                    margin-right: 30px;
                    margin-bottom: 5px;
                    box-shadow: 1px 1px 2px #ccc;
            .post-info
                time
                    color: #aaa;
                    font-size: 11px;
                    padding: 30px;
                    display: inline-block;
                    line-height: 23px;
                span
                    float: right;
                    padding: 30px;
                    a.tagged
                        padding: 5px;
                        font-size: 11px;
                        text-decoration: none;
                        &.tag-javascript
                            color: #fff;
                            font-weight: bold;
                            box-shadow: 1px 1px 2px #ccc;
                            background: $bk-javascript;
                        &.tag-php
                            color: #fff;
                            font-weight: bold;
                            box-shadow: 1px 1px 2px #ccc;
                            background: $bk-php;
                        &.tag-laravel
                            color: #fff;
                            font-weight: bold;
                            box-shadow: 1px 1px 2px #ccc;
                            background: $bk-laravel;
