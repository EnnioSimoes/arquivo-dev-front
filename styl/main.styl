//####### HELPERS ########
.border
    border: 1px solid #000
.block-center
    margin: 0 auto;
    display: block;

//####### TIPOGRAPHY ########
p, a, span, h1, h2, h3, h4, h5
    font-family: 'Ubuntu', sans-serif;
    color: #333;

$cinza_escuro = #36424a;
$azul = #0483B5;
$laranja = #E84C1C;
$verde = #05C290;

//####### STRUCTURE ########
.icon
    display: block;
    text-indent: -9999px;
    float: left;
.icon-search
    width: 32px;
    height: 32px;
    background: url(./../images/icons/icon-search.svg) no-repeat;
    background-size: 32px 32px;
.icon-code
    width: 25px;
    height: 25px;
    background: url(./../images/icons/icon-code.svg) no-repeat;
    background-position: center;
    background-size: 17px;

//####### HEADER ########
header
    width: 100%;
    background-color: $cinza_escuro;
    nav
        ul.nav-principal
            display: block;
            padding: 0;
            margin: 0;
            min-width: 470px;
            li
                display: inline-block;
                list-style: none;
                margin: 0;
                padding: 0;
                a
                    color: #fff
                    font-weight: bold;
                    font-size: 16px;
                    text-decoration: none;
                    padding: 42px 7px;
                    display: block;
                    margin: 0;
                    transition: all ease 0.5s
                    &:hover
                        background-color: $cinza_escuro + 10%;
.mega-menu-dropdown
    position: relative;
    width: 100%;
    height: 350px;
    background: #EEEEEE;
    .destaque
        background: #F9C92B;
        height: 349px;
        padding-top: 30px;
        .chamada-destaque
        a
            text-decoration: none;
        p
            color: #333;
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            margin-top: 10px;
            padding-left: 10px;
            padding-right: 10px;
    .box-links
        min-height: 310px;
        margin-top: 20px;
        margin-bottom: 20px;
        padding: 0;
        h3
            text-transform: uppercase;
            margin-top: 0;
        h4
            font-size: 12px;
            color: #333;
            font-weight: bold;
            margin-bottom: 5px;
            margin-top: 5px;
        .link-preview
            height: 90px;
            overflow: hidden;
            margin-top: 5px;
            margin-right: 15px;
            transition: all ease 0.4s
            border-radius: 2px;
            &:hover
                background: #ccc;
            a
                text-decoration: none;
            img
                margin-right: 5px;
            p
                font-size: 12px;
                color: #333;
                text-align: justify;
                padding-right: 15px;
