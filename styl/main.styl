//####### HELPERS ########
.border
    border: 1px solid #000
.block-center
    margin: 0 auto;
    display: block;

//####### TIPOGRAPHY ########
p, a, span, h1, h2, h3, h4, h5
    font-family: 'Ubuntu', sans-serif;

$cinza = #36424a;
$azul = #24AFFF;

//####### STRUCTURE ########
.icon
    display: block;
    text-indent: -9999px;
    float: left;
.icon-search
    width: 32px;
    height: 32px;
    background: url(./../images/icons/icon-search.svg) no-repeat;
    background-size: 32px 32px;
.icon-code
    width: 25px;
    height: 25px;
    background: url(./../images/icons/icon-code.svg) no-repeat;
    background-position: center;
    background-size: 17px;

//####### HEADER ########
header
    width: 100%;
    background-color: $cinza;
    nav
        ul.nav-principal
            display: block;
            padding: 0;
            margin: 0;
            li
                display: inline-block;
                list-style: none;
                margin: 0;
                padding: 0;
                a
                    color: #fff
                    font-weight: bold;
                    font-size: 16px;
                    text-decoration: none;
                    padding: 42px 7px;
                    display: block;
                    margin: 0;
                    transition: all ease 0.5s
                    &:hover
                        background-color: $cinza + 10%;
    form.buscar
        float: right;
        padding: 33px 0;
        position: relative;
        min-width: 242px;
        input[type="text"]
            display: block;
            float: left;
            height: 40px;
            border-radius: 3px 0 0 3px;
            width: 0px;
            right: -30px;
            transition: all ease 0.5s
            position: relative;
            &:hover, &:focus
                width: 195px;
                margin-right: 0;
                right: -2px;

        button.search
            width: 40px;
            height: 40px;
            background: url(./../images/icons/icon-search.svg) no-repeat;
            background-color: $cinza + 20%;
            background-size: 35px 35px;
            background-position: center;
            border: none;
            border-radius: 3px;
            position: relative;
            z-index: 10;
            &:hover ~ #text_busca
                width: 200px;
                margin-right: 0;
                right: -2px;
.mega-menu-dropdown
    position: relative;
    width: 100%;
    min-height: 350px;
    border: 1px solid #ccc;
    background: #95A5A6;
    .destaque
        background: #F9C92B;
        height: 350px;
        padding-top: 30px;
        .chamada-destaque
        a
            text-decoration: none;
        p
            color: #333;
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            margin-top: 10px;
            padding-left: 10px;
            padding-right: 10px;
